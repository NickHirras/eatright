<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:r="urn:import:com.google.gwt.requestfactory.ui.client">

<ui:style field="admin" src="admin.css" />

	<g:DockLayoutPanel unit="EM" height="100%" width="100%">
		<g:north size="10">
			<g:VerticalPanel width="100%">
				<g:HorizontalPanel styleName="{admin.globalBar}" width="100%">
					<g:HTMLPanel><strong><font style="color:DarkGreen;">EatRightApp</font></strong></g:HTMLPanel>			
					<g:HorizontalPanel styleName="{admin.globalUser}">
						<r:LoginWidget ui:field="loginWidget" />
					</g:HorizontalPanel>			
				</g:HorizontalPanel>
				<g:HTMLPanel><h1>Admin Console</h1></g:HTMLPanel>
				<g:HorizontalPanel styleName="{admin.toolbar}" width="100%">
					<g:HTMLPanel>&nbsp;</g:HTMLPanel>
				</g:HorizontalPanel>				
			</g:VerticalPanel>
		</g:north>
		<g:west size="25">
			<g:VerticalPanel styleName="{admin.menuPanel}">
				<g:Label>User Accounts</g:Label>
				<g:Hyperlink>Menus and Reviews</g:Hyperlink>
			</g:VerticalPanel>
		</g:west>
		<g:center>
			<g:HTMLPanel>Center panel!</g:HTMLPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>

